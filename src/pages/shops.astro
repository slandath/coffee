---
import MainLayout from "../layouts/MainLayout.astro"
const allShops = await Astro.glob("../pages/content/shops/*.md")

---
<MainLayout title="Blog">
    <div class="container p-3">
    <div class="row">
        {allShops.map((post) => 
            <div class="col-sm-3">
                <div class="card text-center p-1 my-2">
                    <img class="card-img-top" src={post.frontmatter.logo} alt="logo">
                    <div class="card-body">
                        <h5 class="card-title">{post.frontmatter.name}</h5>
                        <p class="card-text">{post.frontmatter.location}</p>
                        <a href={post.url} class="btn btn-secondary">Read More</a>
                    </div>
                </div>
            </div>
        </div>
        )}
    </div>
    </MainLayout>