---
import MainLayout from '../layouts/MainLayout.astro';
const allShops = await Astro.glob('../pages/content/shops/*.md');
---

<MainLayout title="Shops">
  <div class="container">
    <div class="columns py-4">
      {
        allShops.map((post) => (
          <div class="column is-one-quarter">
            <div class="card p-4">
              <div class="card-image">
                <figure class="image">
                  <img src={post.frontmatter.logo} alt="logo" />
                </figure>
              </div>

              <header>
                <p class="card-header-title is-centered py-2">
                  {post.frontmatter.name}
                </p>
              </header>
              <div class="card-content has-text-centered py-1">
                <p class="mb-3">{post.frontmatter.location}</p>
                <a href={post.url} class="button is-info">
                  Read More
                </a>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</MainLayout>
