---
import MainLayout from '../layouts/MainLayout.astro';
const allPosts = await Astro.glob('../pages/content/posts/*.md');
---

<MainLayout title="Blog">
  <div class="container">
    <div class="columns py-4">
      {
        allPosts.map((post) => (
          <div class="column is-one-quarter">
            <div class="card">
              <div class="card-content has-text-centered">
                <div class="content">
                  <h5 class="card-title">{post.frontmatter.title}</h5>
                  <p class="card-text">{post.frontmatter.description}</p>
                  <a href={post.url} class="button is-info">
                    Read More
                  </a>
                </div>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</MainLayout>
