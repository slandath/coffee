---
import MainLayout from '../layouts/MainLayout.astro';
const allEquipment = await Astro.glob('../pages/content/equipment/*.md');
---

<MainLayout title="Blog">
  <div class="container">
    <div class="columns is-multiline py-4">
      {
        allEquipment.map((post) => (
          <div class="column is-3">
            <div class="card">
              <div class="card-image py-4">
                <figure class="image is-128x128 mx-auto">
                  <img src={post.frontmatter.logo} alt="logo" />
                </figure>
              </div>
              <header>
                <p class="card-header-title is-centered">
                  {post.frontmatter.name}
                </p>
              </header>
              <div class="card-content has-text-centered">
                <a
                  href={post.frontmatter.website}
                  class="button is-info"
                  target="_blank"
                >
                  Website
                </a>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</MainLayout>
